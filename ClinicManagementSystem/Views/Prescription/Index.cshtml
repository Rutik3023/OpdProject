@model ClinicManagementSystem.Models.VMPrescription

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<script>
    var cart=[];
    $(document).ready(function () {
        $("#OpenModal").click(function () {
            $("#PrescriptionModal").show();
        });

        $("[data-bs-dismiss='modal']").click(function () {
            $("#PrescriptionModal").hide();
        });

        $("#PId").change(function () {
            $.ajax({
                "url": "/PrescriptionApi/Load?id=" + $("#PId").val() ,
                "method": "get",
                success: function (rep) {
                    $("#CId").empty();
                    if (rep.Code == 0) {
                        
                        var obj = rep.Message ;
                        console.log()
                        $("#CId").val(obj.Id);
                        loadaid(obj.Id)
                    }
                },
                error: function (err) {
                    console.log(err);
                }
            });



        });

        $("#Addmedicine").click(function () {
            if ($("#QTY").val()>0)
            {
                if ($("#MDose").prop("checked")) {

                    $("#MDose").val(true);
                }
                else {
                    $("#MDose").val(false);
                }
                if ($("#AfDose").prop("checked")) {

                    $("#AfDose").val(true);
                }
                else {
                    $("#AfDose").val(false);
                }
                if ($("#NDose").prop("checked")) {

                    $("#NDose").val(true);
                }
                else {
                    $("#NDose").val(false);
                }
                var obj = {

                    "Srno": cart.length + 1,
                    "MedicineId": $("#MedicineId").val(),
                    "Medicinename": $("#MedicineId option:selected").text(),
                    "QTY": $("#QTY").val(),
                    "MDose": $("#MDose").val(),
                    "AfDose": $("#AfDose").val(),
                    "NDose": $("#NDose").val(),

                }


                cart.push(obj);

                loadcart();
                clarecartbax();
                console.log(cart);
            }
           
        });


        $("#save").click(function () {
          
            if (cart.length==0) {

                alert("Shop Cart is Empty");
                return;
            }

            var obj = {

                "AId": $("#AId").val(),
                "Symtams": $("#Symtams").val(),
                "Disiese": $("#Disiese").val(),
                "Narration": $("#Narration").val(),
                "ShopCart": cart,
                 


            }
            $.ajax({
                "url": "/PrescriptionApi/Save",
                "method": "post",
                "contentType": "application/json",
                "data": JSON.stringify(obj),

                success: function (data) {

                    alert(data.Message);
                   


                    $("#DoctorModal").hide();

                },
                error: function (err) { console.log(err); }
            });


        });













    });

    function loadaid (id) {
        $.ajax({
            "url": "/PrescriptionApi/Loadaid?id=" + id,
            "method": "get",
            success: function (rep) {
                $("#AId").val(null);
                if (rep.Code == 0) {

                    var obj = rep.Message;
                    console.log()
                    $("#AId").val(obj.Id);

                }
            },
            error: function (err) {
                console.log(err);
            }
        });


    }

    function loadcart()
    {
        $("#CartItems").empty();
        $.each( cart ,function (index,item) {

            $("#CartItems").append("<tr><td><button type='button' class='btn btn-sm btn-outline-danger'><i class='fa-solid fa-trash'></i></button></td><td>" + item.Srno + "</td><td>" + item.Medicinename + "</td><td>" + item.QTY + "</td><td>" + item.MDose + "</td><td>" + item.AfDose + "</td><td>" + item.NDose +"</td></tr>")
        })

    }

    function clarecartbax(){

        $("#MDose").val("");
        $("#AfDose").val(false);
        $("#NDose").val(false);
        $("#QTY").val(null);
    }
    
</script>


